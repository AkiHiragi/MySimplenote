<UserControl
    mc:Ignorable="d"
    x:Class="MySimplenote.Views.TagsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Border Style="{DynamicResource SidebarBorderStyle}" Width="250">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Заголовок тэгов  -->
            <StackPanel
                Grid.Row="0"
                Margin="15,15,15,10"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="16"
                    Style="{DynamicResource SectionHeaderTextStyle}"
                    Text="Тэги" />
            </StackPanel>

            <!--  Создание нового тэга  -->
            <Border
                Grid.Row="1"
                Margin="15,0,15,15"
                Style="{DynamicResource SearchBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Style="{DynamicResource TagInputTextBoxStyle}"
                        Text="{Binding NewTagName, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Command="{Binding CreateTagCommand}"
                        Content="+"
                        Grid.Column="1"
                        Height="25"
                        Margin="5,0,0,0"
                        Style="{DynamicResource CreateButtonStyle}"
                        Width="25" />
                </Grid>
            </Border>

            <!--  Список всех тегов  -->
            <ListBox
                Grid.Row="2"
                ItemsSource="{Binding AllTags}"
                Margin="15,0,15,15"
                Style="{DynamicResource NotesListBoxStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Background="Transparent"
                            BorderBrush="{DynamicResource LightBorderBrush}"
                            BorderThickness="0,0,0,1"
                            Margin="0,1"
                            Padding="8,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Цветной кружок (кликабельный для смены цвета)  -->
                                <Button
                                    Background="{Binding Color}"
                                    Command="{Binding DataContext.ChangeTagColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Grid.Column="0"
                                    Height="18"
                                    Style="{DynamicResource BaseButtonStyle}"
                                    ToolTip="Изменить цвет (клик)"
                                    Width="18">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="9">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="2"
                                                        Opacity="0.3"
                                                        ShadowDepth="1" />
                                                </Border.Effect>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!--  Название тега  -->
                                <TextBox
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    Grid.Column="1"
                                    Margin="10,0,8,0"
                                    Style="{DynamicResource BaseTextBoxStyle}"
                                    Text="{Binding Name, UpdateSourceTrigger=LostFocus}"
                                    ToolTip="Редактировать название"
                                    VerticalAlignment="Center">
                                    <TextBox.InputBindings>
                                        <KeyBinding
                                            Command="{Binding DataContext.UpdateTagNameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Key="Enter" />
                                    </TextBox.InputBindings>
                                </TextBox>

                                <!--  Кнопка добавления к заметке  -->
                                <Button
                                    Command="{Binding DataContext.AddTagToNoteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="+"
                                    Grid.Column="2"
                                    Height="20"
                                    Style="{DynamicResource CreateButtonStyle}"
                                    ToolTip="Добавить к текущей заметке"
                                    Width="20" />

                                <!--  Кнопка удаления  -->
                                <Button
                                    Command="{Binding DataContext.DeleteTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="×"
                                    Grid.Column="3"
                                    Height="20"
                                    Margin="4,0,0,0"
                                    Style="{DynamicResource DangerButtonStyle}"
                                    ToolTip="Удалить тег"
                                    Width="20" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  Разделитель  -->
            <Border
                Background="{DynamicResource BorderBrush}"
                Grid.Row="3"
                Height="1"
                Margin="15,10" />

            <!--  Теги текущей заметки  -->
            <StackPanel Grid.Row="4" Margin="15">
                <TextBlock
                    Margin="0,0,0,10"
                    Style="{DynamicResource SectionHeaderTextStyle}"
                    Text="Теги заметки:" />
                <ItemsControl ItemsSource="{Binding SelectedNote.Tags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Background="{Binding Color}"
                                CornerRadius="12"
                                Margin="2"
                                Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="White"
                                        Text="{Binding Name}" />
                                    <Button
                                        Command="{Binding DataContext.RemoveTagFromNoteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Content="×"
                                        FontSize="10"
                                        Height="16"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource DangerButtonStyle}"
                                        Width="16" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>