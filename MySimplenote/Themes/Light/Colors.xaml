<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Основные цвета -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="DangerColor">#f44336</Color>
    
    <!-- Фоновые цвета -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SidebarBackgroundColor">#f5f5f5</Color>
    <Color x:Key="FooterBackgroundColor">#f9f9f9</Color>
    
    <!-- Цвета границ -->
    <Color x:Key="BorderColor">#ddd</Color>
    <Color x:Key="LightBorderColor">#eee</Color>
    
    <!-- Цвета текста -->
    <Color x:Key="PrimaryTextColor">#000000</Color>
    <Color x:Key="SecondaryTextColor">#666666</Color>
    <Color x:Key="PlaceholderTextColor">#999999</Color>
    <Color x:Key="LightTextColor">#ccc</Color>
</ResourceDictionary>
