<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Базовый стиль TextBox  -->
    <Style TargetType="TextBox" x:Key="BaseTextBoxStyle">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="CaretBrush" Value="{DynamicResource PrimaryTextBrush}" />
    </Style>

    <!--  Поле поиска  -->
    <Style
        BasedOn="{StaticResource BaseTextBoxStyle}"
        TargetType="TextBox"
        x:Key="SearchTextBoxStyle">
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Style.Triggers>
            <Trigger Property="Text" Value="">
                <Setter Property="Background">
                    <Setter.Value>
                        <VisualBrush
                            AlignmentX="Left"
                            AlignmentY="Center"
                            Stretch="None">
                            <VisualBrush.Visual>
                                <TextBlock
                                    Foreground="{DynamicResource PlaceholderTextBrush}"
                                    Margin="2,0"
                                    Text="Поиск заметок..." />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  Заголовок заметки  -->
    <Style
        BasedOn="{StaticResource BaseTextBoxStyle}"
        TargetType="TextBox"
        x:Key="TitleTextBoxStyle">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding SelectedNote}" Value="{x:Null}">
                <Setter Property="Text" Value="Выберите заметку" />
                <Setter Property="Foreground" Value="{DynamicResource PlaceholderTextBrush}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <!--  Содержимое заметки  -->
    <Style
        BasedOn="{StaticResource BaseTextBoxStyle}"
        TargetType="TextBox"
        x:Key="ContentTextBoxStyle">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding SelectedNote}" Value="{x:Null}">
                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource LightTextBrush}" />
                <Setter Property="Text" Value="Выберите заметку для редактирования" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style
        BasedOn="{StaticResource BaseTextBoxStyle}"
        TargetType="TextBox"
        x:Key="TagInputTextBoxStyle">
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Style.Triggers>
            <Trigger Property="Text" Value="">
                <Setter Property="Background">
                    <Setter.Value>
                        <VisualBrush
                            AlignmentX="Left"
                            AlignmentY="Center"
                            Stretch="None">
                            <VisualBrush.Visual>
                                <TextBlock
                                    Foreground="{DynamicResource PlaceholderTextBrush}"
                                    Margin="2,0"
                                    Text="Новый тег..." />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>