<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Основные цвета -->
    <Color x:Key="PrimaryColor">#BB86FC</Color>
    <Color x:Key="SuccessColor">#03DAC6</Color>
    <Color x:Key="DangerColor">#CF6679</Color>
    
    <!-- Фоновые цвета -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SidebarBackgroundColor">#1E1E1E</Color>
    <Color x:Key="FooterBackgroundColor">#2D2D2D</Color>
    
    <!-- Цвета границ -->
    <Color x:Key="BorderColor">#3C3C3C</Color>
    <Color x:Key="LightBorderColor">#2D2D2D</Color>
    
    <!-- Цвета текста -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B3B3B3</Color>
    <Color x:Key="PlaceholderTextColor">#666666</Color>
    <Color x:Key="LightTextColor">#808080</Color>
    
</ResourceDictionary>