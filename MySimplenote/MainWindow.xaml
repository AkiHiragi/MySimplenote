<Window
    Height="600"
    Title="MySimplenote"
    Width="1000"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="MySimplenote.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="clr-namespace:MySimplenote.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MySimplenote"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MySimplenote.Views"
    xmlns:vm="clr-namespace:MySimplenote.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.InputBindings>
        <!--  Ctrl+N - Новая заметка  -->
        <KeyBinding
            Command="{Binding CreateNoteCommand}"
            Key="N"
            Modifiers="Ctrl" />

        <!--  Ctrl+S - Сохранить заметку  -->
        <KeyBinding
            Command="{Binding SaveNoteCommand}"
            Key="S"
            Modifiers="Ctrl" />

        <!--  Delete - Удалить заметку  -->
        <KeyBinding Command="{Binding DeleteNoteCommand}" Key="Delete" />

        <!--  Ctrl+T - Переключить тему  -->
        <KeyBinding
            Command="{Binding ToggleThemeCommand}"
            Key="T"
            Modifiers="Ctrl" />
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Левая панель со списком заметок  -->
        <Border Grid.Column="0" Style="{DynamicResource SidebarBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Заголовок и кнопка создания  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="15,15,15,10"
                    Orientation="Horizontal">
                    <TextBlock
                        FontSize="18"
                        Style="{DynamicResource SectionHeaderTextStyle}"
                        Text="Заметки" />
                    <Button
                        Command="{Binding CreateNoteCommand}"
                        Content="+"
                        Margin="10,0,0,0"
                        Style="{DynamicResource CreateButtonStyle}" />
                    <!--  Кнопка переключения темы  -->
                    <Button
                        Command="{Binding ToggleThemeCommand}"
                        Margin="5,0,0,0"
                        Style="{DynamicResource ThemeToggleButtonStyle}"
                        ToolTip="Переключить тему">
                        <Button.Content>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="🌙" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentTheme}" Value="Dark">
                                                <Setter Property="Text" Value="☀️" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button.Content>
                    </Button>

                </StackPanel>

                <!--  Поиск  -->
                <Border
                    Grid.Row="1"
                    Margin="15,0,15,15"
                    Style="{DynamicResource SearchBorderStyle}">
                    <TextBox
                        Style="{DynamicResource SearchTextBoxStyle}"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        x:Name="SearchTextBox">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding SearchCommand}" Key="Enter" />
                        </TextBox.InputBindings>
                    </TextBox>
                </Border>

                <!--  Список заметок  -->
                <ListBox
                    Grid.Row="2"
                    ItemsSource="{Binding Notes}"
                    SelectedItem="{Binding SelectedNote}"
                    Style="{DynamicResource NotesListBoxStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource NoteItemBorderStyle}">
                                <StackPanel>
                                    <TextBlock Style="{DynamicResource NoteTitleTextStyle}" Text="{Binding Title}" />
                                    <TextBlock Style="{DynamicResource NoteContentTextStyle}" Text="{Binding Content}" />
                                    <TextBlock Style="{DynamicResource NoteDateTextStyle}" Text="{Binding UpdatedAt, StringFormat='dd.MM.yyyy HH:mm'}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource NoteListBoxItemStyle}" TargetType="ListBoxItem" />
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!--  Панель тэгов  -->
        <views:TagsPanel DataContext="{Binding}" Grid.Column="1" />

        <!--  Правая панель с редактором  -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Заголовок заметки  -->
            <Border
                AllowDrop="True"
                Grid.Row="0"
                Style="{DynamicResource HeaderBorderStyle}">
                <TextBox
                    IsEnabled="{Binding SelectedNote, Converter={x:Static converters:BooleanConverter.IsNotNull}}"
                    Style="{DynamicResource TitleTextBoxStyle}"
                    Text="{Binding SelectedNote.Title, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  Содержимое заметки  -->
            <TextBox
                Grid.Row="1"
                IsEnabled="{Binding SelectedNote, Converter={x:Static converters:BooleanConverter.IsNotNull}}"
                Style="{DynamicResource ContentTextBoxStyle}"
                Text="{Binding SelectedNote.Content, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Панель кнопок  -->
            <Border Grid.Row="2" Style="{DynamicResource FooterBorderStyle}">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Command="{Binding SaveNoteCommand}"
                        Content="Сохранить"
                        IsEnabled="{Binding SelectedNote, Converter={x:Static converters:BooleanConverter.IsNotNull}}"
                        Margin="0,0,5,0"
                        Style="{DynamicResource PrimaryButtonStyle}" />

                    <Button
                        Background="{DynamicResource BorderBrush}"
                        Command="{Binding ExportCurrentNoteCommand}"
                        Content="Экспорт заметки"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        IsEnabled="{Binding SelectedNote, Converter={x:Static converters:BooleanConverter.IsNotNull}}"
                        Margin="0,0,5,0"
                        Padding="15,8"
                        Style="{DynamicResource BaseButtonStyle}" />

                    <Button
                        Background="{DynamicResource BorderBrush}"
                        Command="{Binding ExportAllNotesCommand}"
                        Content="Экспорт всех"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Margin="0,0,5,0"
                        Padding="15,8"
                        Style="{DynamicResource BaseButtonStyle}" />

                    <Button
                        Command="{Binding DeleteNoteCommand}"
                        Content="Удалить"
                        IsEnabled="{Binding SelectedNote, Converter={x:Static converters:BooleanConverter.IsNotNull}}"
                        Style="{DynamicResource DangerButtonStyle}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>